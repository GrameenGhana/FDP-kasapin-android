<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="horizontal"
    android:paddingLeft="?android:attr/scrollbarSize"
    android:paddingTop="@dimen/spacing_quarter"
    android:paddingRight="?android:attr/scrollbarSize"
    android:paddingBottom="@dimen/spacing_quarter">


    <TextView
        android:id="@+id/field_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        android:textColor="@color/black"
        tools:text="Label" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_half"
        android:layout_marginRight="@dimen/spacing_half"
        android:layout_weight="1"
        android:background="@drawable/border_background"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/field_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/field_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#cc0000"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
