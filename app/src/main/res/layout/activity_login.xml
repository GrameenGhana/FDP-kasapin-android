<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/background_view"/>

    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">





    <!-- Login progress -->


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >


                <ImageView
                    android:id="@+id/image_view1"
                    android:layout_width="@dimen/imageview_two_height"
                    android:layout_height="@dimen/imageview_two_height"
                    android:scaleType="fitCenter"
                    android:padding="@dimen/spacing_normal"
                    android:src="@drawable/organic_food1"
                    android:layout_gravity="center_horizontal"
                    />



                <TextView
                    android:id="@+id/text_1"
                    style="@style/TextAppearance.AppCompat.Display2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/fdp"
                    android:textColor="@color/text_black_87"
                    android:layout_gravity="center_vertical"
                    />




            </LinearLayout>

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tag_line"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold" />


        </LinearLayout>




        <RelativeLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_weight="3"
        android:orientation="vertical">


        <AutoCompleteTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:background="@drawable/border_background"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="@dimen/spacing_normal"
            />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginBottom="@dimen/spacing_half"
            android:background="@drawable/border_background"
            android:drawableRight="@drawable/ic_visibility_grey_500_24dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/spacing_normal"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_2"
            android:background="@drawable/rounded_button_primary"
            android:text="@string/sign_in"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>
</FrameLayout>