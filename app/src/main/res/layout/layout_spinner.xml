<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/cell_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/spacing_quarter"
        android:clickable="true"
        android:focusable="true"
        android:maxLines="1"
        android:textColor="@color/table_view_default_text_color"
        android:textSize="@dimen/text_size_normal"
        tools:text="" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/spacing_quarter"
        android:layout_marginEnd="@dimen/spacing_quarter"
        android:textColor="@color/cpb_red"
        android:textSize="@dimen/text_size_tiny"
        tools:text="This is an info" />
</LinearLayout>